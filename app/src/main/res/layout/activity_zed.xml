<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:background="@drawable/marble_background"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Champions.ZedActivity">

        <TextView
            android:id="@+id/battleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fq_regular"
            android:paddingTop="10dp"
            android:text="SYLAS vs ZED"
            android:textAlignment="center"
            android:textColor="@color/gold_font"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/fq_regular"
            android:text="Generic Tips"
            android:textAlignment="center"
            android:textColor="@color/gold_font"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/battleTitle" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/fq_regular"
            android:text="CS"
            android:textColor="@color/gold_font"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/fq_regular"
            android:text="DEATHS"
            android:textColor="@color/gold_font"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/fq_regular"
            android:text="KILLS"
            android:textColor="@color/gold_font"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/fq_regular"
            android:text="VS"
            android:textColor="@color/gold_font"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:background="@color/gold_font"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/editTextNumber3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:background="@color/gold_font"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber2"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/editTextNumber4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:background="@color/gold_font"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber3"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/editTextNumber2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:background="@color/gold_font"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/fq_regular"
            android:text="TILT METER"
            android:textAlignment="center"
            android:textColor="@color/gold_font"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.307"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:srcCompat="@drawable/ic_mad" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:srcCompat="@drawable/ic_mad" />

        <ImageView
            android:id="@+id/imageView"
            android:background="@color/white"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:srcCompat="@drawable/ic_mad" />

        <ImageView
            android:id="@+id/imageView"
            android:background="@color/white"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.261"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:srcCompat="@drawable/ic_mad"
            tools:ignore="DuplicateIds,NotSibling" />

        <ImageView
            android:id="@+id/imageView"
            android:background="@color/white"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="152dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.937"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:srcCompat="@drawable/ic_mad"
            tools:ignore="DuplicateIds,NotSibling" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="335dp"
            android:fontFamily="@font/fq_regular"
            android:text="NOTES"
            android:textAlignment="center"
            android:textColor="@color/gold_font"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/battleTitle" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="375dp"
            android:layout_margin="12dp"
            android:layout_marginTop="8dp"
            android:background="@color/gold_font"
            android:ems="10"
            android:fontFamily="@font/fq_regular"
            android:gravity="top"
            android:textAlignment="inherit"
            android:hint="Notes Here..."
            android:inputType="textPersonName"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/reflection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REFLECTION"
            android:textAlignment="center"
            android:fontFamily="@font/fq_regular"
            android:textColor="@color/gold_font"
            android:textSize="35sp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2"/>

        <TextView
            android:id="@+id/reflectionText"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ask_yourself_if_i_died_why_if_a_play_worked_or_i_got_a_kill_why_3_things_i_learned_this_game"
            android:fontFamily="@font/fq_regular"
            android:textColor="@color/gold_font"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/reflection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText

            android:id="@+id/learned"
            android:gravity="top"
            android:hint="Notes here... "
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:layout_marginTop="12dp"
            android:background="@color/gold_font"
            android:fontFamily="@font/fq_regular"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.586"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reflectionText" />

        <TextView
            android:id="@+id/watchVods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WATCH VODS"
            android:fontFamily="@font/fq_regular"
            android:textSize="28sp"
            android:textColor="@color/gold_font"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/learned"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

           <TextView
               android:id="@+id/vodInstructions"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
              android:text="Watch High Elo Vods of this MatchUp and try to write down 3 things you learned:"
              android:fontFamily="@font/fq_regular"
               android:textColor="@color/gold_font"
               android:textSize="20sp"
               app:layout_constraintTop_toBottomOf="@+id/watchVods"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/vodInput"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:hint="Notes here..."
            android:fontFamily="@font/fq_regular"
            android:textColorHint="@color/white"
            android:layout_marginBottom="80dp"
            android:gravity="top"
            app:layout_constraintTop_toBottomOf="@+id/vodInstructions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/gold_font"
           />

        <Button
            android:id="@+id/buttonWin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIN"
            android:layout_marginTop="25dp"
            android:backgroundTint="#A1FCDF"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.226"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vodInput" />

        <Button
            android:id="@+id/buttonLose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOSE"
            android:textColor="@color/black"
            android:backgroundTint="#CE4257"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.632"
            app:layout_constraintStart_toStartOf="@+id/buttonWin"
            app:layout_constraintTop_toBottomOf="@+id/vodInput" />

        <Button
            android:id="@+id/addGameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INPUT GAME"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/fq_regular"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/buttonLose"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>